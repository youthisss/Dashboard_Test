<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Toko</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1>Dashboard Admin Toko</h1>

        <% if (error) { %>
            <div class="error-box"><%= error %></div>
        <% } %>

        <section class="card">
            <h2>Input Pembelian Baru</h2>
            <form action="/pembelian/baru" method="POST">
                <div class="form-group">
                    <label for="produk">Pilih Produk:</label>
                    <select name="produk_id" id="produk" required>
                        <option value="" disabled selected>-- Pilih Produk --</option>
                        <% produk.forEach(p => { %>
                            <option value="<%= p.id %>">
                                <%= p.nama %> (Stok: <%= p.stok %>)
                            </option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="jumlah">Jumlah Beli:</label>
                    <input type="number" name="jumlah" id="jumlah" min="1" required>
                </div>
                <button type="submit" class="btn btn-primary">Input Pembelian</button>
            </form>
        </section>

        <section class="card">
            <h2>Riwayat Pembelian</h2>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Product</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% pembelian.forEach(b => { %>
                        <tr>
                            <td><%= new Date(b.tanggal).toLocaleString('id-ID') %></td>
                            <td><%= b.nama %></td>
                            <td><%= b.jumlah_beli %></td>
                            <td>
                                <span class="status <%= b.status.toLowerCase() %>">
                                    <%= b.status %>
                                </span>
                            </td>
                            <td>
                                <% if (b.status === 'COMPLETED') { %>
                                    <form action="/pembelian/cancel/<%= b.id %>" method="POST" style="margin:0;">
                                        <button type="submit" class="btn btn-danger">Cancel</button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </div>
</body>
</html>